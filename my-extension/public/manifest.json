{
  "manifest_version": 3,
  "name": "My React Extension",
  "version": "1.0",
  "description": "A Chrome extension with a right-side panel built using React + Vite.",
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },

  "action": {
    "default_title": "Open Builder Panel"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["sidePanel", "tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
